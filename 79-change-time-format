public String changeTimeFormat(String strTime) {
    Integer hour =Integer.valueOf(strTime.substringBefore(':'));
    Integer minute =Integer.valueOf(strTime.substringAfter(':'));
    String strAMPM;
    if(hour >12)
    {
        strAMPM= 'PM';
        hour = hour -12;
    }

    else
    {
        strAMPM ='AM';
        
        if(hour< 1)
        {hour =12;}
    }
    return String.valueOf(hour) +':'+ String.valueOf(minute) +' '+ strAMPM;
}