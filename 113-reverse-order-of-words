public String reverseWordsInASentence(String sentence){
    if(sentence == null)
    return null;
    String sentenceTrim = sentence.trim(); //trims the begining and ending whitespaces.
    Integer countMatches = sentenceTrim.countMatches(' ')+1; //counts the whitespaces in the string.
   // String sentenceReverse = sentenceTrim.reverse();
    List<String> sentenceList = sentence.split(' ');
    List<String> reverseList = new List<String>();

    for(Integer i=sentenceList.size();i<=1;i--)
    {
        reverseList.add(sentenceList.get(i));
    }
    String sentenceWordsReverse = String.join(reverseList,' ');
    return sentenceWordsReverse;
}